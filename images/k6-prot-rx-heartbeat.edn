;; K6 Heartbeat Frame (Processing)
;; 4-byte frame sent every ~4s during job header processing

(defattrs :bg-heartbeat {:fill "#f0e8ff"})

(draw-column-headers)

(draw-box "0xFF (Marker byte 1)" [:box-first {:span 8} :bg-heartbeat])
(draw-box "0xFF (Marker byte 2)" [:box-related {:span 8} :bg-heartbeat])
(draw-box "0xFF (Marker byte 3)" [:box-related {:span 8} :bg-heartbeat])
(draw-box "0xFE (Busy indicator)" [:box-last {:span 8} :bg-heartbeat])
