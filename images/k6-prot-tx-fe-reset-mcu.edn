(defattrs :bg-cmd {:fill "#e8f4f8"})

(draw-column-headers)

(draw-box "0xFE (Reset MCU/IAP)" [:box-first {:span 8} :bg-cmd])
(draw-box "0x00 (Reserved)" [:box-related {:span 8} :bg-cmd])
(draw-box "0x05 (Length)" [:box-related {:span 8} :bg-cmd])
(draw-box "0x00 (Reserved)" [:box-related {:span 8} :bg-cmd])

(next-row)
(draw-box "Checksum (Two's complement)" [{:span 8} :bg-cmd])
(draw-gap 24)
